/* pages/recommend/recommend.wxss */
.recommendSongContainer .header{
   width: 100%;
   position: relative;
   height: 300rpx;
}
.recommendSongContainer .header image{
  width: 100%;
  height: 100%;
}
.recommendSongContainer .header .date{
  width: 260rpx;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
  position: absolute;
  left:50%;
  top:50%;
  font-size: 36rpx;
  color:#fff;
  font-weight: bolder;
  transform: translate(-50%,-50%);
}
/* 列表区域 */
.listContainer{
  position: relative;
  top:-20rpx;
  padding:0 20rpx;
  border-radius: 30rpx;
  background-color: #fff;
}
.listContainer .listHeader{
  height: 80rpx;
  line-height: 80rpx;
}
.listContainer .changeMore{
  float: right;
}
/* 内容区 */

.listScroll{
height: calc(100vh - 380rpx);
}
.scrollItem{
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
}
.scrollItem image{
  width:80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.scrollItem .musicInfo{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    max-width: 400rpx;
   
}
.scrollItem .musicInfo text{
  font-size: 24rpx;
  line-height: 40rpx;
  height: 40rpx;
  /* 单行溢出打点 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.scrollItem .iconfont{
  position: absolute;
  width:80rpx;
  height: 80rpx;
  line-height: 80rpx;
  right: 0rpx;
  text-align: center;
}